<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
    <% if current_user != nil && current_user.id == 1 %>
    <%= form_for(@user) do |f|  %>
      <div class="form-inline" style="font-weight:normal; ">
        <%= f.check_box :admin, class: 'form-control', :onchange => "this.form.submit();" %>
        <%= f.label :admin, "Make Admin", style: 'font-weight:normal' %>
      </div>
    <% end %>
  <% end %>
  
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Posts </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>