    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Posts</h3>
      <ol class="microposts">
        <%= render @pending_posts %>
      </ol>
  </div>
  </div>
<% else %>
