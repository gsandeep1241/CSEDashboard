<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>News Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to CSE Dashboard</h1>

  <h2>
    This is the home page for the
    <a href="https://polar-harbor-52142.herokuapp.com/">CSE Dashboard</a>
    application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("CSE_DB.png", alt: "CSE Dashboard Logo"),
            'https://polar-harbor-52142.herokuapp.com/' %>
<% end %>